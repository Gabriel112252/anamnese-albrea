<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-100 to-gray-200 px-4">

  <div class="w-full max-w-md bg-white shadow-2xl rounded-3xl p-10 space-y-6">

    <!-- LOGO -->
    <div class="flex justify-center">
      <%= image_tag "logo-albrea.png", class: "h-20 object-contain" %>
    </div>

    <% if flash[:alert] %>
      <div class="text-sm text-red-600 bg-red-50 p-3 rounded-xl">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= form_with url: login_path, class: "space-y-5" do %>

      <div>
        <label class="block text-sm font-medium mb-1">Email</label>
        <%= email_field_tag :email, nil,
          class: "w-full border border-gray-300 rounded-xl px-4 py-3 focus:ring-2 focus:ring-black focus:outline-none transition" %>
      </div>

      <div>
        <label class="block text-sm font-medium mb-1">Senha</label>
        <%= password_field_tag :password, nil,
          class: "w-full border border-gray-300 rounded-xl px-4 py-3 focus:ring-2 focus:ring-black focus:outline-none transition" %>
      </div>

      <%= submit_tag "Entrar",
        class: "w-full bg-black text-white py-3 rounded-xl text-sm font-medium hover:bg-gray-800 transition" %>

    <% end %>

  </div>

</div>