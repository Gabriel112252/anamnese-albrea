#!/bin/bash -e

# Enable jemalloc
if [ -z "${LD_PRELOAD+x}" ] && [ -f /usr/lib/*/libjemalloc.so.2 ]; then
  export LD_PRELOAD="$(echo /usr/lib/*/libjemalloc.so.2)"
fi

# Aguarda banco (importante em container orchestration)
echo "Preparing database..."
./bin/rails db:prepare

echo "Starting Rails..."
exec "${@}"